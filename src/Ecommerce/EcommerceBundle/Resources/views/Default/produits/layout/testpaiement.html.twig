<div class="container">
    <div class="row">
        <img  src="http://www.telecontact.ma/trouver/images/Image-11.jpg" class="img-fluid" alt="proposition de visibilité telecontact" style="
    height: 100px;
    width: 100%;
">

    </div>


    <p style="float: right; width: 88%;    text-align: right;"> {{ 'now' | date("d/m/y") }} </p>
    <p> {% if raison  %} {% if raison['rs']  %}  <div style="float: right; width: 88%; font-family: Arial;
        font-size: 16px;   padding: 0px; margin:0px; text-align: left;">  <span class="text-success">Raison sociale : {{ raison['rs']|capitalize }}</span> </div> {% endif %}{% endif %}</p>
